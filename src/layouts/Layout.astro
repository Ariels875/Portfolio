---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<button id="cambiar-tema-btn">Cambiar Tema</button>

		<slot />
		<script>
			document.getElementById("cambiar-tema-btn").addEventListener("click", function() {
				// Obtener el elemento HTML
				var htmlElement = document.querySelector("html");
				
				// Alternar entre las clases de tema claro y oscuro
				htmlElement.classList.toggle("tema-claro");
				htmlElement.classList.toggle("tema-oscuro");
			});
		</script>
	</body>
</html>
<style is:global>
	html{
		font-family: 
			Menlo,
			Monaco,
			Lucida Console,
			'Courier New', Courier, monospace;
		background-color: #fff;
		letter-spacing: -0.25rem;
	}
	body,
	figure {
		margin: 0;
		padding: 0;

	}
	a {
		text-decoration: none;
	}
	ul {
		list-style: none;
		margin: 0;
		padding: 0;
		
	}
	*, *::before, *::after {
		box-sizing: border-box;

	}

	/* dark mode */
	 @media (prefers-color-scheme: dark) {
		html{
			background: #333;
			color: #fff;
		}

	}
	h1, h2, h3, h4 {
		margin: 0;
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;

	}
	p {
		color: #888;
		font-size:.8rem;
		line-height: 1.5;
		margin: 0;
		text-wrap: pretty;

	}
		/* Estilos para el tema claro */
	.tema-claro {
		background: #fff;
		color: #333;
	}

	/* Estilos para el tema oscuro */
	.tema-oscuro {
		background: #333;
		color: #fff;
	}

</style>
